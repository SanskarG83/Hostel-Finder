<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#C5AEAE"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Welcome to \nHOSTEL FINDER"
        android:textColor="#C10606"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:fontFamily="times"
        android:hint="User Name"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:fontFamily="times"
        android:hint="Password"
        android:inputType="textPassword"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:fontFamily="times"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/repassword"
        android:layout_marginTop="50dp"
        android:backgroundTint="#420C43"
        android:fontFamily="times"
        android:insetLeft="30dp"
        android:insetRight="30dp"
        android:text="Register now!"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/btnsignin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/btnsignup"
        android:layout_marginTop="30dp"
        android:backgroundTint="#420C43"
        android:fontFamily="times"
        android:text="Existing user! Go to Sign in page"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="555dp"
        android:fontFamily="@font/aclonica"
        android:text="Hostels now at your fingertips !!!"
        android:textColor="#032BBB"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="600dp"
        app:srcCompat="@drawable/hostellogo2" />

</RelativeLayout>